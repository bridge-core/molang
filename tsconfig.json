{
  "compileOnSave": true,
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": "./lib/",
    "composite": true,
    "removeComments": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "strictFunctionTypes": true,
    

    /* Additional Checks */
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "types": [
    "node",
    "jest"
  ]
}
